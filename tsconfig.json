{
  "include": ["src", "types"],
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "jsx": "preserve",
    "moduleResolution": "node",
    "baseUrl": "./",
    "noEmit": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "useDefineForClassFields": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "app/*": ["src/*"],
      "services/*": ["src/services/*"]
    }
  }
}
